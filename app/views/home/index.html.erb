<h1>To-Do List</h1>

<form id= "item-form">
  <input type="text" name="" placeholder="add a new to-do item" id="item-text">
  <input type="submit" value="add item" id="item-submit">
</form>

<div class="row">
  <div class="col-md-6">
    <h3>unfinished items</h3>
    <table class="table table-striped list" id="unfinished-items">
      <tr>
        <th><a id="sort-unfinished-by-name" class="btn" data-type="name" data-is-finished="false">item</a></th>
        <th><a id="sort-unfinished-by-created-at" class="btn" data-type="created-at" data-is-finished="false">created at</a></th>
        <th><a class="btn">completed at</a></th>
      </tr>
    </table>
  </div>

  <div class="col-md-6">
    <h3>finished items</h3>
    <table class="table table-striped list" id="finished-items">
      <tr>
        <th><a id="sort-finished-by-name" class="btn" data-type="name" data-is-finished="true">item</a></th>
        <th><a id="sort-finished-by-created-at" class="btn" data-type="created-at" data-is-finished="true">created at</a></th>
        <th><a id="sort-finished-by-completed-at"class="btn" data-type="completed-at" data-is-finished="true">completed at</a></th>
      </tr>
    </table>
  </div>
</div>
